type Result a e =
  | Ok a
  | Error e

type Exn = String

effect Exn = {
  val raise : Exn -> Never
}

let _ : Int =
  handle
    (match True
    | True -> 1
    | False -> raise "exn")
      : Int
  | <raise _> -> 2

let reraise : String, (() -> <Exn, a> b) -> <Exn, a> b =
  \msg f ->
    let' result : Result c String =
      handle f () : e
      | value -> Ok value : Result c String
      | <raise exn> -> Error exn
    in
    (match result
    | Ok value -> value
    | Error exn -> raise ((msg ++ ": " : String) ++ exn : String))
      : b

let _ : () =
  handle
    reraise
      "Reraised"
      ((\() ->
        (match True
        | True -> raise "My exception"
        | False -> 42)
          : Int)
        : () -> <Exn> Int)
      : Int
  | value -> print_int value
  | <raise exn> -> print ("Unhandled exception: " ++ exn : String)
