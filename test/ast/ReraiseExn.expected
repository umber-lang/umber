type Result a e =
  | Ok a
  | Error e

type Exn = String

effect Exn = {
  val raise : Exn -> Never
}

let _ : Int =
  handle
    (match True
    | True -> 1
    | False -> raise "exn")
      : Int
  | <raise _> -> 2

let reraise : String, (() -> <Exn, a> b) -> <Exn, a> b =
  \msg f ->
    let' result : Result c String =
      handle f () : e
      | value -> Ok value : Result c String
      | <raise exn> -> Error exn
    in
    (match result
    | Ok value -> value
    | Error exn -> raise ((msg ++ ": " : String) ++ exn : String))
      : b

let _ : () =
  handle
    reraise
      "Reraised"
      ((\() ->
        (match True
        | True -> raise "My exception"
        | False -> 42)
          : Int)
        : () -> <Exn> Int)
      : Int
  | value -> print_int value
  | <raise exn> -> print ("Unhandled exception: " ++ exn : String)

let catch : (() -> <Exn, a> b), (String -> <a> b) -> <a> b =
  \f exn_handler ->
    (match
      (handle f () : d
      | x -> Ok x : Result d String
      | <raise exn> -> Error exn)
        : Result d String
    | Ok x -> x
    | Error exn -> exn_handler exn)
      : b

let fail : () -> <Exn> Never = \() -> raise "failure" : Never

let this_should_not_raise : () -> () = \() -> catch fail ((\(_ : Exn) -> ()) : Exn -> ())

let this_should_raise : () -> <Exn> Never =
  \() ->
    catch
      fail ((\(_ : Exn) -> raise "outer exception" : Never) : Exn -> <Exn> Never)
      : Never
